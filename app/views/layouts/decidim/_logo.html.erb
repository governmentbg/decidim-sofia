<% if organization %>
  <%= link_to decidim.root_url(host: organization.host), "aria-label": t("front_page_link", scope: "decidim.accessibility") do %>
    <% if organization.logo.attached? %>
      <%= image_tag '/reshava_sofia_logo.jpg', alt: t("logo", scope: "decidim.accessibility", organization: organization.name) %>
    <% else %>
      <span><%= organization.name %></span>
    <% end %>
  <% end %>
<% else %>
  <%= Decidim.application_name %>
<% end %>
